<Styles xmlns="https://github.com/avaloniaui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="{DynamicResource ThemeForegroundBrush}"/>
    </Style>
    <Style Selector="TextBlock.scrolling">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeLarge}" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
      <Style Selector="Button.icon">
          <Setter Property="Background" Value="{DynamicResource ThemeBackgroundBrush}"/>
          <Setter Property="BorderThickness" Value="0"/>
          <Setter Property="Padding" Value="2,4"/>
          <Setter Property="Height" Value="32"/>
          <Setter Property="Width" Value="32"/>
      </Style>
    <Style Selector="Button:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeControlMidBrush}"/>
    </Style>
    <Style Selector="Button:pressed  /template/ ContentPresenter">
        <Setter Property="Background" Value="{DynamicResource ThemeControlHighBrush}"/>
    </Style>
      <Style Selector="Button.prevIcon">
        <Setter Property="Content" Value="{DynamicResource PreviousIcon}" />
      </Style>
      <Style Selector="Button.playIcon">
          <Setter Property="Content" Value="{DynamicResource PlayIcon}" />
      </Style>
      <Style Selector="Button.pauseIcon">
          <Setter Property="Content" Value="{DynamicResource PauseIcon}" />
      </Style>
      <Style Selector="Button.nextIcon">
          <Setter Property="Content" Value="{DynamicResource NextIcon}" />
      </Style>
      <Style Selector="Button.stopIcon">
          <Setter Property="Content" Value="{DynamicResource StopIcon}" />
      </Style>
      <Style Selector="Button.exitIcon">
          <Setter Property="Content" Value="{DynamicResource ExitIcon}" />
      </Style>
</Styles>