<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Sage.ViewModels;assembly=Sage"
        Icon="resm:Sage.Assets.avalonia-logo.ico"
        HasSystemDecorations="False"
        ShowInTaskbar="True"
        Title="Sage">
  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  <Border Background="{DynamicResource ThemeBackgroundBrush}" BorderBrush="{DynamicResource ThemeBorderHighBrush}" BorderThickness="{DynamicResource ThemeBorderThickness}">
    <!--<TextBlock Text="{Binding Greeting}" Margin="16"/>-->
    <StackPanel Orientation="Vertical">
      <Grid></Grid>
      <UniformGrid Rows="1" Columns="10">
        <Button Classes="icon prevIcon" Height="32" Width="32"/>
      </UniformGrid>
    </StackPanel>
  </Border>
</Window>