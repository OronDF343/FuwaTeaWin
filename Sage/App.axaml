<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sage"
             x:Class="Sage.App"
			 RequestedThemeVariant="Default">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
		<SimpleTheme />
        <StyleInclude Source="avares://Sage/Themes/Default.xaml"/>
        <StyleInclude Source="avares://Sage/Themes/Icons/Default.xaml"/>
    </Application.Styles>
</Application>