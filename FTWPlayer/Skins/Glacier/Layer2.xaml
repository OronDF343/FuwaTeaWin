    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Layer0.xaml"/>
        <ResourceDictionary Source="Layer1.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    <!-- Border -->
    <!-- Background -->
